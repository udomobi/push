{% extends "frame.html" %}
{% load smartmin compress temba i18n %}
-block page-top

-block extra-less
  -compress css
    {% lessblock %}
      @import url('https://fonts.googleapis.com/css?family=Encode+Sans:500');
      :plain
        #lead-form {
          display: block;
          text-align: center;
          background-color: #23203f;
          padding-top: 15px;
          input[type=text] {
            margin-bottom: 0;
            height: 27px;
          }
        }

        .text-error {
          text-shadow: 0px 0px 12px #fff;
          letter-spacing:1px;
          color: @flat-red;
          width: 350px;
          padding-left:5px;
          margin-top: -5px;
          font-weight:500;
        }

        #pageBody {
          min-width:1000px;
        }

        .container {
          height:0px;
          min-height:0px;
        }

        #splash {
          padding-bottom: 70%;

          h1.description {
            padding-top: 30px;
            position: relative;
          }
        }

        #footer {
          min-height: 50px;
          margin-top: 0px;
        }

    {% endlessblock %}

-block post-header
    .row
      #splash
        %h1.description
          {{ brand.description }}

    -if not thanks
      %br.clearfix{clear:"both"}